<section class="w-full">
  <div class="rounded-[28px] bg-slate-900/80 p-5 shadow-[0_24px_70px_rgba(0,0,0,0.55)] ring-1 ring-white/5 sm:p-6">
    <div class="mb-3 flex items-center justify-between gap-3">
      <div class="text-sm font-semibold uppercase tracking-[0.2em] text-slate-400">
        Overview
      </div>
      <div
        id="stale-indicator"
        class="hidden rounded-full bg-amber-500/10 px-3 py-1 text-[11px] font-semibold uppercase tracking-wide text-amber-200 ring-1 ring-amber-300/30"
      >
        Data stale
      </div>
    </div>

    <div class="grid gap-3 text-sm text-slate-200 sm:grid-cols-2">
      <div>
        <div class="text-xs uppercase tracking-[0.2em] text-slate-400">
          Timestamp
        </div>
        <div id="last-seen-time" class="font-medium">--</div>
      </div>
      <div>
        <div class="text-xs uppercase tracking-[0.2em] text-slate-400">
          Coordinates
        </div>
        <div id="coords" class="font-medium">--</div>
      </div>
    </div>

    <div id="reconnect-row" class="mt-5 flex flex-wrap items-center justify-between gap-3">
      <div class="flex items-center gap-2 text-xs uppercase tracking-[0.2em] text-slate-400">
        Status
        <span id="status-text-inline" class="text-emerald-300">Online</span>
      </div>
      <button
        id="reconnect-btn"
        class="inline-flex items-center justify-center rounded-full bg-amber-300/20 px-4 py-2 text-sm font-semibold text-amber-200 ring-1 ring-amber-200/40 transition hover:bg-amber-300/30"
        type="button"
      >
        Try again
      </button>
    </div>

    <div id="reconnect-message-wrap" class="mt-3 flex items-center gap-2 text-xs text-slate-400">
      <span class="h-2 w-2 animate-spin rounded-full border border-amber-200/60 border-t-transparent"></span>
      <span id="reconnect-message">Reconnecting to stream...</span>
    </div>
  </div>
</section>
