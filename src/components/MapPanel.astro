<section class="flex h-full w-full flex-col">
  <div class="mb-2 text-xs uppercase tracking-[0.2em] text-slate-400">
    Live map
  </div>
  <div
    id="map-container"
    class="relative min-h-[14rem] w-full flex-1 overflow-hidden rounded-2xl bg-slate-900/70 shadow-[0_18px_50px_rgba(0,0,0,0.45)] ring-1 ring-white/5 sm:min-h-[18rem]"
  >
    <div id="map" class="h-full w-full"></div>
    <div
      class="absolute right-14 top-3 z-50 flex items-center gap-1 rounded-full bg-slate-950/70 p-1 ring-1 ring-amber-200/30"
      aria-label="Trail time window"
    >
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="1h"
      >
        1h
      </button>
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="6h"
      >
        6h
      </button>
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="24h"
      >
        24h
      </button>
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="7d"
      >
        7d
      </button>
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="30d"
      >
        30d
      </button>
      <button
        type="button"
        class="trail-window-btn inline-flex h-7 items-center justify-center rounded-full px-2 text-[11px] font-semibold uppercase tracking-[0.14em] text-amber-200/80 transition hover:text-amber-100"
        data-trail-window="all"
      >
        All
      </button>
    </div>
    <button
      id="map-fullscreen-btn"
      class="absolute right-3 top-3 z-50 inline-flex h-9 w-9 items-center justify-center rounded-full bg-slate-950/70 text-amber-200 ring-1 ring-amber-200/40 transition hover:bg-slate-950/90"
      type="button"
      aria-label="Toggle fullscreen"
    >
      <svg
        viewBox="0 0 24 24"
        class="h-4 w-4"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <path d="M8 3H5a2 2 0 0 0-2 2v3" />
        <path d="M21 8V5a2 2 0 0 0-2-2h-3" />
        <path d="M3 16v3a2 2 0 0 0 2 2h3" />
        <path d="M16 21h3a2 2 0 0 0 2-2v-3" />
      </svg>
    </button>
    <button
      id="map-recenter-btn"
      class="absolute bottom-3 right-3 z-50 inline-flex h-9 w-9 items-center justify-center rounded-full bg-slate-950/70 text-amber-200 ring-1 ring-amber-200/40 transition hover:bg-slate-950/90"
      type="button"
      aria-label="Recenter map"
    >
      <svg
        viewBox="0 0 24 24"
        class="h-4 w-4"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        aria-hidden="true"
      >
        <circle cx="12" cy="12" r="6" />
        <path d="M12 2v2" />
        <path d="M12 20v2" />
        <path d="M2 12h2" />
        <path d="M20 12h2" />
      </svg>
    </button>
  </div>
</section>
