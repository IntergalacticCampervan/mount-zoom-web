---
import CommentComposer from "./CommentComposer.astro";
---

<div
  id="add-comment-modal"
  class="fixed inset-0 z-[82] hidden items-center justify-center bg-slate-950/80 px-4"
  role="dialog"
  aria-modal="true"
  aria-labelledby="add-comment-title"
>
  <div class="relative w-full max-w-2xl rounded-2xl bg-slate-900 p-5 shadow-[0_20px_60px_rgba(0,0,0,0.5)] ring-1 ring-amber-200/20">
    <div class="mb-3 flex items-center justify-between gap-3">
      <h2 id="add-comment-title" class="text-lg font-semibold text-amber-100">
        Add comment
      </h2>
      <button
        id="add-comment-close-btn"
        type="button"
        class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-800 text-slate-200 transition hover:bg-slate-700"
        aria-label="Close add comment dialog"
      >
        Ã—
      </button>
    </div>

    <CommentComposer />
  </div>
</div>
